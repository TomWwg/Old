<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<include file="struts/struts-base.xml" />
	<constant name="struts2.sslplugin.httpPort" value="80" />
	<constant name="struts2.sslplugin.httpsPort" value="8443" />
	<constant name="struts2.sslplugin.annotations" value="true" />

	<package name="sys" extends="sys-base" namespace="/web">
		<interceptors>
			<interceptor-stack name="sys">
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="sys" />
		<global-results>
			<result name="UnknowException">/common/unknowerror.jsp</result>
			<result name="success" type="json">
				<param name="contentType">text/html</param>
				<param name="includeProperties">actionMessages.*,success</param>
				<param name="excludeNullProperties">true</param>
				<param name="ignoreHierarchy">false</param>
			</result>
			<result name="error" type="json">
				<param name="contentType">text/html</param>
				<param name="includeProperties">actionErrors.*,fieldErrors.*,success</param>
				<param name="excludeNullProperties">true</param>
				<param name="ignoreHierarchy">false</param>
			</result>
			<result name="tree" type="tree">
				<param name="root">treeNode</param>
			</result>
		</global-results>

		<global-exception-mappings>
			<exception-mapping exception="java.lang.Throwable"
				result="UnknowException" />
		</global-exception-mappings>
	</package>
	<include file="struts2/struts-*.xml"></include>

</struts>
