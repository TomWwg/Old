<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class table="role_info" name="com.sws.model.RoleInfo">
    <comment>角色信息表</comment>
    <id unsaved-value="null" name="id">
      <column name="id">
        <comment>主键</comment>
      </column>
      <generator class="native" >
      	<param name="sequence">seq_role_info</param>
      </generator>
    </id>
    <property name="name" type="string">
      <column name="name" length="60" not-null="true">
        <comment>角色名</comment>
      </column>
    </property>
    <property name="expireTime" type="java.util.Date">
      <column name="expire_time">
        <comment>过期时间</comment>
      </column>
    </property>
    <property name="remark" type="string">
      <column name="remark" length="1024">
        <comment>备注</comment>
      </column>
    </property>
     <property name="menuIds" type="string">
      <column name="menu_ids" length="1024">
        <comment>菜单权限</comment>
      </column>
    </property>
    <property name="status" update="false" type="long">
      <column name="status">
        <comment>状态</comment>
      </column>
    </property>
    <property name="creator" update="false" type="string">
      <column name="creator" length="64">
        <comment>创建者</comment>
      </column>
    </property>
    <property name="createTime" update="false" type="java.util.Date">
      <column name="create_time">
        <comment>创建时间</comment>
      </column>
    </property>
    <property name="updateTime" type="java.util.Date">
      <column name="update_time">
        <comment>更新时间</comment>
      </column>
    </property>
  </class>
</hibernate-mapping>
